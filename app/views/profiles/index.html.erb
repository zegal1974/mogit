<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last update</th>
      <th>Faction</th>
      <th>Race</th>
      <th>Level</th>
      <th>Claxx</th>
      <th>Money</th>
      <th>Gender</th>
      <th>Played</th>
      <th>Played this level</th>
      <th>Active covenant</th>
      <th>Last logout</th>
      <th>Zone</th>
      <th>Sub zone</th>
      <th>Bind location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.last_update %></td>
        <td><%= profile.faction %></td>
        <td><%= profile.race %></td>
        <td><%= profile.level %></td>
        <td><%= profile.claxx %></td>
        <td><%= profile.money %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.played %></td>
        <td><%= profile.played_this_level %></td>
        <td><%= profile.active_covenant_id %></td>
        <td><%= profile.last_logout %></td>
        <td><%= profile.zone %></td>
        <td><%= profile.sub_zone %></td>
        <td><%= profile.bind_location %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

