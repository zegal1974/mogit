<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last update</th>
      <th>Faction</th>
      <th>Race</th>
      <th>Level</th>
      <th>Chr class</th>
      <th>Money</th>
      <th>Gender</th>
      <th>Played</th>
      <th>Played this level</th>
      <th>Active covenant</th>
      <th>Last logout</th>
      <th>Zone</th>
      <th>Sub zone</th>
      <th>Bind location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.last_update %></td>
        <td><%= character.faction_id %></td>
        <td><%= character.race_id %></td>
        <td><%= character.level %></td>
        <td><%= character.chr_class_id %></td>
        <td><%= character.money %></td>
        <td><%= character.gender %></td>
        <td><%= character.played %></td>
        <td><%= character.played_this_level %></td>
        <td><%= character.active_covenant_id %></td>
        <td><%= character.last_logout %></td>
        <td><%= character.zone %></td>
        <td><%= character.sub_zone %></td>
        <td><%= character.bind_location %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

